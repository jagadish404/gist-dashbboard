{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended", "tslint-sonarts", "tslint-react-hooks"],
    "jsRules": {},
    "rules": {
        "no-data-testid": { "severity": "warning" },
        "react-hooks-nesting": "error",
        "no-empty-interface": true,
        "no-for-in": true,
        "no-parameter-reassignment": true,
        "no-var-requires": true,
        "no-async-without-await": true,
        "no-console": [true, "log", "error"],
        "no-null-keyword": false,
        "no-promise-as-boolean": true,
        "max-file-line-count": [true, 300],
        "no-require-imports": true,
        "prefer-readonly": true,
        "import-sources-order": false,
        "ordered-imports": false,
        "align": [true, "parameters"],
        "object-literal-sort-keys": false,
        // to allow things like this: {unquotedProp: value, "quoted.prop": value}
        "object-literal-key-quotes": [true, "as-needed"],
        // google style guide
        "array-type": [true, "array-simple"],
        "arrow-return-shorthand": true,
        "ban": [
            true,
            { "name": ["it", "skip"] },
            { "name": ["it", "only"] },
            { "name": ["it", "async", "skip"] },
            { "name": ["it", "async", "only"] },
            { "name": ["describe", "skip"] },
            { "name": ["describe", "only"] },
            { "name": "parseInt", "message": "tsstyle#type-coercion" },
            { "name": "parseFloat", "message": "tsstyle#type-coercion" },
            { "name": "Array", "message": "tsstyle#array-constructor" },
            { "name": ["*", "innerText"], "message": "Use .textContent instead. tsstyle#browser-oddities" }
        ],
        "ban-ts-ignore": true,
        "ban-types": [
            true,
            ["Object", "Use {} instead."],
            ["String", "Use 'string' instead."],
            ["Number", "Use 'number' instead."],
            ["Boolean", "Use 'boolean' instead."]
        ],
        "class-name": true,
        "curly": [true, "ignore-same-line"],
        "deprecation": true,
        "forin": true,
        "interface-name": [true, "never-prefix"],
        "interface-over-type-literal": false,
        "jsdoc-format": true,
        "label-position": true,
        "member-access": [true, "no-public"],
        "new-parens": true,
        "no-angle-bracket-type-assertion": true,
        "no-any": true,
        "no-arg": true,
        "no-unsafe-any": true,
        "no-conditional-assignment": true,
        "no-construct": true,
        "no-debugger": true,
        "no-default-export": false,
        "no-duplicate-variable": true,
        "no-inferrable-types": false,
        "no-namespace": [true, "allow-declarations"],
        "no-reference": true,
        "no-string-throw": true,
        "no-string-literal": false,
        "no-return-await": true,
        "no-unsafe-finally": true,
        "no-unused-expression": true,
        "no-var-keyword": true,
        "object-literal-shorthand": true,
        "only-arrow-functions": [true, "allow-declarations", "allow-named-functions"],
        "prefer-const": true,
        "radix": true,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "switch-default": true,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "triple-equals": [true, "allow-null-check"],
        "use-isnan": true,
        "variable-name": [
            false,
            "check-format",
            "ban-keywords",
            "allow-leading-underscore",
            "allow-trailing-underscore"
        ]
    },
    "rulesDirectory": ["tslint_rules"],
    "exclude": ["node_modules", "styles", "static"]
}
